{
  "$schema": "https://json.schemastore.org/jscpd.json",
  "threshold": 3,
  "minLines": 5,
  "minTokens": 50,
  "reporters": ["console", "json"],
  "output": "./reports/jscpd",
  "gitignore": true,
  "format": ["typescript", "javascript", "tsx", "jsx"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*.d.ts",
    "**/__snapshots__/**",
    "**/coverage/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/mocks/**",
    "**/.wrangler/**"
  ]
}
