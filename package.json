{
  "name": "hushbox",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "dev": "./scripts/with-env tsx scripts/dev.ts",
    "dev:clean": "lsof -ti:5173,8787 | xargs -r kill || true",
    "dev:restart": "pnpm dev:clean && pnpm dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --force --continue -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo typecheck",
    "test": "./scripts/with-env turbo test",
    "test:all": "./scripts/with-env turbo test --continue",
    "test:api": "./scripts/with-env turbo test --filter=@hushbox/api",
    "test:web": "./scripts/with-env turbo test --filter=@hushbox/web",
    "test:crypto": "./scripts/with-env turbo test --filter=@hushbox/crypto",
    "test:shared": "./scripts/with-env turbo test --filter=@hushbox/shared",
    "test:db": "./scripts/with-env turbo test --filter=@hushbox/db",
    "test:realtime": "./scripts/with-env turbo test --filter=@hushbox/realtime",
    "test:ui": "./scripts/with-env turbo test --filter=@hushbox/ui",
    "test:watch": "./scripts/with-env vitest",
    "test:watch:ui": "./scripts/with-env vitest --ui",
    "test:coverage": "./scripts/with-env turbo test:coverage",
    "e2e": "playwright test",
    "e2e:quick": "playwright test --project=chromium --project=iphone-15",
    "e2e:fast": "playwright test --project=iphone-15 --retries=0",
    "e2e:debug": "playwright test --reporter=json | tsx scripts/e2e-debug.ts",
    "e2e:quick:debug": "playwright test --project=chromium --project=iphone-15 --reporter=json | tsx scripts/e2e-debug.ts",
    "e2e:fast:debug": "playwright test --project=iphone-15 --retries=0 --reporter=json | tsx scripts/e2e-debug.ts",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "db:up": "./scripts/with-env docker compose up -d --wait postgres neon-proxy redis serverless-redis-http",
    "db:down": "docker compose down",
    "db:reset": "./scripts/with-env tsx scripts/db-reset.ts",
    "db:migrate": "./scripts/with-env pnpm --filter @hushbox/db db:migrate",
    "db:generate": "./scripts/with-env pnpm --filter @hushbox/db db:generate",
    "db:studio": "./scripts/with-env pnpm --filter @hushbox/db db:studio",
    "db:seed": "./scripts/with-env tsx scripts/seed.ts",
    "generate:env": "tsx scripts/generate-env.ts",
    "verify:env": "tsx scripts/verify-env.ts",
    "verify:evidence": "./scripts/with-env tsx scripts/verify-evidence.ts",
    "email:preview": "tsx --watch scripts/email-preview.ts",
    "generate:readme": "tsx scripts/generate-readme.ts",
    "lint:duplication": "jscpd --threshold 2 --silent .",
    "lint:unused": "./scripts/with-env knip --no-progress",
    "lint:summary": "turbo lint --continue -- --format summary",
    "lint:check": "tsx scripts/lint-check.ts",
    "mutation": "./scripts/with-env stryker run",
    "mutation:incremental": "./scripts/with-env stryker run --incremental"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@hushbox/crypto": "workspace:*",
    "@hushbox/db": "workspace:*",
    "@hushbox/shared": "workspace:*",
    "@playwright/test": "^1.57.0",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-formatter-summary": "^2.0.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "execa": "^9.6.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.7",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.3.1"
    }
  }
}
