{
  "name": "lome-chat",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "dev": "./scripts/with-env tsx scripts/dev.ts",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo typecheck",
    "test": "./scripts/with-env turbo test",
    "test:watch": "./scripts/with-env vitest",
    "test:ui": "./scripts/with-env vitest --ui",
    "test:coverage": "./scripts/with-env turbo test:coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:quick": "playwright test --project=chromium --project=iphone-15",
    "e2e:fast": "playwright test --project=chromium --project=iphone-15 --retries=0",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "db:up": "./scripts/with-env docker compose up -d --wait postgres neon-proxy",
    "db:down": "docker compose down",
    "db:reset": "./scripts/with-env tsx scripts/db-reset.ts",
    "db:migrate": "./scripts/with-env pnpm --filter @lome-chat/db db:migrate",
    "db:generate": "./scripts/with-env pnpm --filter @lome-chat/db db:generate",
    "db:studio": "./scripts/with-env pnpm --filter @lome-chat/db db:studio",
    "db:seed": "./scripts/with-env tsx scripts/seed.ts",
    "generate:env": "tsx scripts/generate-env.ts",
    "verify:env": "tsx scripts/verify-env.ts",
    "verify:evidence": "tsx scripts/verify-evidence.ts",
    "generate:readme": "tsx scripts/generate-readme.ts"
  },
  "devDependencies": {
    "@lome-chat/db": "workspace:*",
    "@lome-chat/shared": "workspace:*",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "execa": "^9.6.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
